<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"  
  android:layout_width="fill_parent"  
  android:layout_height="wrap_content">  
  <!-- 步骤 -->  
  <TextView  
      android:layout_width="@dimen/buzou"
      android:layout_height="wrap_content"
      android:gravity="center" 
   android:id="@+id/StepName"  
  />  
  <!-- 处理人 -->  
  <TextView  
       android:layout_width="@dimen/chuliren"
       android:layout_height="wrap_content"
       android:gravity="center"
   android:id="@+id/ReceiveName"  
  />  
  <!-- 收件时间 -->  
  <TextView  
      android:layout_width="@dimen/shoujianshijian"
      android:layout_height="wrap_content"
      android:gravity="center"
   android:id="@+id/ReceiveTime"  
   android:visibility="gone"
  />  
    <!-- 完成时间 -->  
  <TextView  
            android:layout_width="@dimen/chulishijian"
            android:layout_height="wrap_content"
            android:gravity="center" 
   android:id="@+id/CompletedTime1"  
  />  
  <!-- 意见 -->  
  <TextView  
   android:layout_width="150dp"  
   android:layout_height="wrap_content"  
   android:gravity="center"
   android:id="@+id/Comment1"  
  /> 
</LinearLayout>  